.container1 {
  text-align: center;
  height: 100vh;
}

.container2 {
  display: flex;
  justify-content: center;
}

.text {
  margin-top: 30px;
  margin-bottom: 60px;
}

.cat-pink {
  width: 285px;
  height: 270px;
  margin-top: 10px;
}

.btn-pink {
  display: flex;
  background-color:  rgba(234,179,171,0.8);
  border-radius: 35px;
  width: 240px;
  height: 60px;
  align-items: center;
  justify-content: center; 
  color: #3A3A3A;
  font-size: 22px;
  font-family: serif;
  font-weight: bold;
  box-shadow: 1px 1px 5px #9999;
}
.btn-pink:hover {
  background-color:  rgba(234,179,171,1.0);
  color: #9999;
  font-family: serif;
}


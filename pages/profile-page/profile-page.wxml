
<view class="container">

        <view class="user-info">
            <view class="userinfo-avatar">
                <open-data  type="userAvatarUrl"></open-data>
                <open-data type="userNickName"></open-data>
            </view>

            <view class="userNickName">
                <open-data type="userNickName"></open-data>
            </view>
                <!-- <view>{{users.location}}</view> -->

<view class="divLine"></view>
        </view>

        <view class='topTabSwiper'>
            <button class='tab  {{currentData == 0 ? "tabBorer" : ""}}'  data-current = "0" bindtap='checkCurrent'>My Pets</button>
            <button class='tab  {{currentData == 1 ? "tabBorer" : ""}}'  data-current = "1" bindtap='checkCurrent'>My Bookings</button>
        </view>


.container1{
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.user-info{
    display: flex;  
    flex-direction: column;  
    align-items: center;  
    margin-top: 20rpx;
}  

.p{
font-size: small;
padding: 16rpx;
}

.userNickName{
    padding: 32rpx;
}

.userinfo-avatar {
overflow:hidden;  
border: 1px solid #000000;
filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));
border-radius: 125px;
width: 139px;
height: 140.01px;
left: 126px;
top: 144px;
}

.divLine{
    background: #E0E3DA;
    width: 100%;
    height: 2rpx;
   }

.topTabSwiper{
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
    padding: 20rpx;
}

.tab {
    display: flex;
    background-color:  #F9F7F8;
    border-radius: 35px;
    width: 160px;
    height: 33px;
    align-items: center;
    justify-content: center; 
    margin: 10px;
    color: #34342B;
    font-size: 13px;
    font-family: sans-serif;
    font-weight: bold;
    box-shadow: 1px 1px 3px #9999;
}
.tab:hover {
    display: flex;
    background-color:  rgba(234,179,171,0.8);
    border-radius: 35px;
    width: 150px;
    height: 33px;
    align-items: center;
    justify-content: center; 
    margin: 10px;
    color: #FCF6F5;
    font-size: 12px;
    font-family: sans-serif;
    font-weight: bold;
    box-shadow: 1px 1px 5px #9999;
}

.h1{
display: flex;
flex-direction: row;
padding-bottom: 10px;
font-weight: bolder;
}
.gender-icon {
    width: 13px;
    height: 13px;
    padding-left: 6px;
}

.model-photo {
    width: 70px;
    height: 70px;
    border-radius: 40px; 
    object-fit: cover;
}

.swiper {
    height: 1000px;
    align-items: center;
}

.card-pet{
    width: auto;
    height: 100px; 
    padding: 8px; 
    background: #F3D4D0;
    border-radius: 20px;
    margin-bottom: 10px;   
    box-shadow: 1px 1px 3px #9999;
}

.pet-info {
    overflow: hidden;
    display: flex;
    align-items: center;
    padding: 2px;
}

.info {
    margin-left: 20px;
}

.description{
    font-family:sans-serif;  

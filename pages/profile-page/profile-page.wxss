.user-info{
    display: flex;  
    flex-direction: column;  
    align-items: center;  
    margin-top: 80rpx;
}  

.p{
font-size: small;
padding: 16rpx;
}

.userNickName{
    padding: 32rpx;
}

.userinfo-avatar {
overflow:hidden;  

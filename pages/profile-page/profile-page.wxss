   }


.topTabSwiper{
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
    padding-right: 50rpx;
    padding-left: 50rpx;
}

.tab {
    background-color: rgba(0, 0, 0, 0.8);
    border-radius: 35px;
    border-color:#000000;
    width: 150px;
    height: 33px;
    align-items: center;
    justify-content: center; 
    margin: 10px;
    color: #ffffff;
    font-size: 13px;
    font-family: 'monospace';
    font-weight: bold;
    box-shadow: 1px 1px 5px #9999;
}
.tab:hover {
    display: flex;
    background-color:  rgba(234,179,171,0.8);
    border-color: rgba(234,179,171,0.8);
    border-radius: 35px;
    width: 150px;
    height: 33px;
    align-items: center;
    justify-content: center; 
    margin: 10px;
    color: #FCF6F5;
    font-size: 12px;
    font-family: 'Open Sans';
    font-weight: bold;
    box-shadow: 1px 1px 5px #9999;
}


.gender-icon {
    width: 13px;
    height: 13px;

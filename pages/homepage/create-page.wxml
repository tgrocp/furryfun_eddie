<view class="section">
  <view class="section-location"style="margin:24rpx 0">3. Location</view>
    <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
        <view class="location-picker">
           Your Location: {{region[0]}}        {{region[1]}}       {{region[2]}}
        </view>
    </picker>
</view>





    <radio-group bindchange="radioChange" style="margin: 30rpx 0">
        <view style="padding-bottom: 12rpx;">4. Gender</view>
            <label class="radio">
                <radio value="male" checked="true"/>Male
            </label>
        <label class="radio">
            <radio value="female" />female
        </label>
    </radio-group>
 

    <radio-group bindchange="radioChange" style="margin: 30rpx 0">
        <view style="padding-bottom: 12rpx;">5. Pet Type</view>
            <label class="radio">
                <radio value="dog" checked="true"/>Dog
            </label>

            <label class="radio">
                <radio value="Cat" />cat
            </label>

            <label class="radio">
                <radio value="others" />others
            </label>
    </radio-group>
    
    <view class="upload-image" style="padding-bottom: 16rpx;">
            6. Upload Image
        <view class="btn-summit" style="padding-top: 16rpx;">
            <button bindtap='chooseImageTap'>click to upload</button>
        </view>
    </view>


    <view class="section">
        7. Description
        <view class="section__title">
            <textarea name="content" placeholder="please write your pet'sdescription here" ></textarea>
        </view>
    </view>

    <view class="btn-summit">
        <button bindtap='bindSubmit'>summit</button>
    </view>

.card-category {
    background-size: cover;
    background-position: center;
    height: 200px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: rgb(97, 34, 34);
    font-size: 24px;
    font-weight: bold;
    text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
    border-radius: 5px;
    box-shadow: 0 0 15px rgba(0,0,0,0.2);
  }
  
  .h1{
    font-size: 18px;
    padding-top: 30px;
    padding-left: 50px;
  }
  
  .card-product {
    overflow: hidden;
    height: 100px;
    box-shadow: 0 0 15px rgba(0,0,0,0.2);
    align-items: center;
  }
  
  .card-product .img {
    height: 100%;
    width: 120px;
    object-fit: cover;
  }
  
  .card-product .h2 {
    font-size: 16px;
    font-weight: bold;
    margin: 0;
  }
  
  .card-product .p {
    font-size: 12px;
    line-height: 1.4;
    opacity: .7;
    margin-bottom: 0;
    margin-top: 8px;
  }
  .btn {
    margin-top: 50px;
  }
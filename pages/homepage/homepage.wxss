  .card-category {
    background-size: cover;
    background-position: center;
    height: 200px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: rgb(97, 34, 34);
    font-size: 24px;
    font-weight: bold;
    text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
    border-radius: 5px;
    box-shadow: 0 0 15px rgba(0,0,0,0.2);
  }
  
  .row-1{
    padding-top: 50rpx;
    display:flex;
    justify-content: center;
  } 
  .row-2{
    padding-top: 50rpx;
    display: flex;
    justify-content: center;
  }
  .box-1{
    padding-right: 20rpx;
    align-items: center;
  }
  .box-2{
    padding-left: 20rpx;
  }
  .box-3{
    padding-right: 20rpx;
  }
  .box-4{
    padding-left: 20rpx;
  }

  .h1{
    font-size: 50rpx;
    padding-top: 50rpx;
    padding-left: 90rpx;
    color: #FF862D;
  }
  
  .card-product {
    overflow: hidden;
    height: 100px;
    box-shadow: 0 0 5rpx rgba(0,0,0,0.2);
    width: 250rpx;
    align-items: center;
    border-radius: 30rpx;
  }
  
  .card-product .model-icon{
    height: 65px;
    width: 85px;
    object-fit: cover;
    padding-left: 20px;
    padding-top: 3px;
  }
  
  .card-product .h2 {
    font-size: 16px;
    font-weight: bold;
    margin: 0;
    text-align: center;
  }
  
  .card-product .p {
    font-size: 12px;
    line-height: 1.4;
    opacity: .7;
    margin-bottom: 0;
    margin-top: 8px;
  }

  .btn {
    margin-top: 50px;
  }

  .container {
    margin-bottom: 100rpx; 
  }

/* pages/homepage/create-page.wxss */
.header{
  border: #695b59;
  display: flex;
  justify-content: space-between;
  background: #F3D4D0;
  padding: 16rpx;
  box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);  
  margin-bottom: 80rpx;
  height: 100px;
}

.content {
  padding:13rpx
}

.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 136rpx;  
  height: 136rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  
  
.userinfo {  
  position: absolute;  
  top:80px;
  display: flex;  
  flex-direction: column;  
  align-items: center;  
  margin-top: -20px;
}  

.h3{
font-family: Poppins;
font-style: normal;
font-weight: 500;
font-size: 16px;
line-height: 19px;
/* identical to box height, or 120% */
color: #FFFFFF;
}

.text{
font-family: Poppins;
font-style: normal;
font-weight: 500;
font-size: 12px;
line-height: 19px;
/* identical to box height, or 162% */
color: #FFFFFF;
}

.header-icon{
  width: 111px;
  height: 117px;
  padding-top: 8rpx;
}

.selection{
  font-size: small
}

.section__title{
  padding: 10px 0px;
  border: 1px solid #CED4DA;
  box-sizing: border-box;
  border-radius: 4px;
  margin: 20rpx;
  height: 70px;
}

.location-picker{
  padding: 10px 0px;
  border: 1px solid #CED4DA;
  box-sizing: border-box;
  border-radius: 4px;
  padding: 8rpx;
}

.name-input{
border: 1px solid #CED4DA;
box-sizing: border-box;
border-radius: 4px;
height: 33px;
/* font-size: 12px; */
}

.location_input_box{
  border: 1px solid #CED4DA;
  box-sizing: border-box;
  border-radius: 4px;
  height: 36px;
}

.title_location{
padding-top: 16rpx;
}

 .btn-submit{
  font-style: normal;
  font-weight: 400;
  font-size: 8px;
  line-height: 13px;
}

.sign{
  display: flex;
  justify-content: space-between;
}

.btn-pink {
  display: flex;
  background-color:  rgba(234,179,171,0.8);
  color: #FFFFFF;
  border-radius: 25px;
  width: 150px;
  height: 45px;
  align-items: center;
  justify-content: center; 
  margin-left: 95px;
  font-size: 18px;
  font-family: 'Open Sans';
  font-weight: bold;
  box-shadow: 1px 1px 5px #9999;
  margin-top: 8px;
}
.btn-pink:hover {
  background-color:  rgba(234,179,171,1.0);
  color: #9999;
}
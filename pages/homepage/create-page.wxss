/* pages/homepage/create-page.wxss */
.header{
  border: #695b59;
  display: flex;
  justify-content: space-between;
  background: #F3D4D0;
  padding: 16rpx;
  box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);  
  margin-bottom: 92rpx;
}

.content {
  padding:16rpx
}

.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 136rpx;  
  height: 136rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  
  
.userinfo {  
  position: absolute;  
  top:80px;

  display: flex;  
  flex-direction: column;  
  align-items: center;  
}  

.h3{
  font-family: Poppins;
font-style: normal;
font-weight: 500;
font-size: 16.25px;
line-height: 19px;
/* identical to box height, or 120% */
color: #FFFFFF;
}

.text{
font-family: Poppins;
font-style: normal;
font-weight: 500;
font-size: 12px;
line-height: 19px;
/* identical to box height, or 162% */
color: #FFFFFF;
}

.header-icon{
  width: 111px;
  height: 117px;
  padding-top: 8rpx;
}


.selection{
  font-size: small
}


.section__title{
  padding: 10px 0px;
  border: 1px solid #CED4DA;
  box-sizing: border-box;
  border-radius: 4px;
  padding: 8rpx;
  margin: 32rpx;
}

.location-picker{
  padding: 10px 0px;
  border: 1px solid #CED4DA;
  box-sizing: border-box;
  border-radius: 4px;
  padding: 8rpx;

}

.name-input{
border: 1px solid #CED4DA;
box-sizing: border-box;
border-radius: 4px;
height: 36px;
}

.location_input_box{
  border: 1px solid #CED4DA;
  box-sizing: border-box;
  border-radius: 4px;
  height: 36px;
}

.title_location{
padding-top: 16rpx;
}

 .btn-summit{
  font-style: normal;
  font-weight: 500;
  font-size: 12px;
  line-height: 15px;
}

.sign{
  display: flex;
  justify-content: space-between;
}
.card-trip {
    overflow: hidden;
    background: white;
    box-shadow: 0 0 15rpx rgba(0,0,0,0.2);
    padding: 20rpx;
  }
  
  .h2 {
    font-size: 18px;
    font-weight: bold;
    margin: 0;
  }
  
  text {
    font-size: 13px;
    opacity: .7;
    margin: 0;
  }
  
  
  .card-trip-infos {
    padding: 16rpx;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    position: relative;
    padding: 48rpx;
  }
  
  .image{
    align-content: center;
    margin: auto;
    display: block;
    padding-bottom: 24rpx;
    height: 160px;
    width: 100%;
    object-fit: cover;
  }

  
.container {
  margin-bottom: 100rpx; 
}


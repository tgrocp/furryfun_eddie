.container{
  padding:18rpx;
}


.card-trip {
    overflow: hidden;
    background: white;
    padding-bottom: 10rpx;
    padding-top: 20rpx;
  }

  .name_gender {
    display: flex;
}
  .gender-icon {
    width: 15px;
    height: 15px;
    padding-left: 10rpx;
}

.h1 {
  color: rgba(234,179,171,1.0);
  font-size: 22px;
  font-family: Ruluko;
  padding-left: 50rpx;
  padding-bottom: 20rpx;

}

  .h2 {
    color: rgba(234,179,171,1.0);
    font-size: 20px;
    font-family: Ruluko;
    padding-left: 5rpx;
  }
  
  .p {
    color: #34342B;
    font-family: sans-serif;
    justify-content: space-between;
    padding-top: 12px;
    padding-bottom: 20px;
  }
  
  .card-trip-infos {
    padding-left: 20rpx;
    position: relative;
    justify-content: space-between;
  }

  .card-trip-title{
    display: flex;
    flex-direction: row;
    justify-content:center;
    margin: 10rpx;
    padding-left: 40rpx;
    padding-right: 40rpx;
    padding-top: 30rpx;
  }
  
  .image{
    align-content: center;
    margin: auto;
    display: block;
    /* padding-bottom: 24rpx; */
    width: 249px;
    height: 189px;
    left: 26px;
    top: 119px;
    border-radius: 20px; 
    object-fit:aspectfill;
    border: #34342B;
  }
 
.container1 {
  margin-bottom: 50rpx; 
  margin-left: 50rpx;
  margin-right: 50rpx;
}

.container2{
  margin-right: 50rpx;
  margin-left: 45rpx;
  display: flex;
}

.location {
  display: flex;
  padding-top: 5px;
}
.location-font {
  font-size: 14px;
  font-family:sans-serif;
  font-weight: bold;
  color: #34342B;
}
.location-icon {
  width: 14px;
  height: 14px;
  padding-right: 5px;
}

.btn-pink {
  display: flex;
  background-color:  rgba(234,179,171,0.8);
  margin: auto;
  color: #FFFFFF;
  border-radius: 25px;
  width: 150px;
  height: 40px;
  align-items: center;
  justify-content: center; 
  font-size: 20px;
  font-family:sans-serif;
  font-weight: bold;
  border: 1px solid;
  padding: 10px;
  box-shadow: 3px 3px #888888;
  margin-top: 50px;
}
.btn-pink:hover {
  background-color:  rgba(234,179,171,1.0);
  color: #9999;
}

.share{
  background-color:  rgba(234,179,171,1.0) !important;
  align-items: center !important;
  border-radius: 40rpx !important;
  width: auto !important;
  font-family:sans-serif;
  font-size: small;
  font-weight: 200rpx;
  box-shadow: 1px 1px 5px #9999;
  margin-right: 8rpx !important;
}

.share:hover{
  align-items: center !important;
  border-radius: 40rpx !important;
  width: auto !important;
  font-size: small;
  font-weight: 200;
  box-shadow: 1px 1px 4px rgba(189, 186, 186, 0.6);
  margin-right: 8rpx !important;
}
.card-trip {
    box-shadow: 0 0 10rpx rgba(0,0,0,0.2);
    padding-top: 5%;
    padding-bottom: 5%;
    background-color: white;
  }

  
  .card-trip h2 {
    font-size: 16rpx;
    font-weight: bold;
    margin: 0;
  }
  
  .card-trip p {
    font-size: 12rpx;
    opacity: .7;
    margin: 0;
  }
  
  
  .card-trip .card-trip-infos {
    padding: 16rpx;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    position: relative;
  }
  

